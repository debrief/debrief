<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/destroyer_256.png">
         <run
               class="org.mwc.asset.netasset2.Client">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.mwc.asset.netasset2.Perspective"
            id="org.mwc.asset.NetAsset2.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Connect"
            class="org.mwc.asset.netasset2.connect.ConnectRCPView"
            id="org.mwc.asset.NetAsset2.ConnectView">
      </view>
      <view
            class="org.mwc.asset.netasset2.time.TimeRCPView"
            id="org.mwc.asset.NetAsset2.TimeView"
            name="Time">
      </view>
      <view
            class="org.mwc.asset.netasset2.part.PartRCPView"
            id="org.mwc.asset.NetAsset2.PartView"
            name="Participant">
      </view>
      <view
            class="org.mwc.asset.netasset2.plot.PlotRCPView"
            id="org.mwc.asset.NetAsset2.PlotView"
            name="Plot">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.mwc.asset.NetAsset2.ConnectView"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.mwc.asset.NetAsset2.TimeView"
               minimized="false"
               relationship="bottom"
               relative="org.mwc.asset.NetAsset2.ConnectView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.mwc.asset.NetAsset2.PartView"
               minimized="false"
               relationship="bottom"
               relative="org.mwc.asset.NetAsset2.TimeView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.mwc.asset.NetAsset2.PlotView"
               minimized="false"
               relationship="bottom"
               relative="org.mwc.asset.NetAsset2.TimeView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.mwc.asset.NetAsset2.application"
            name="NetASSET NG">
         <property
               name="windowImages"
               value="icons/destroyer_16.png,icons/destroyer_32.png,icons/destroyer_48.png,icons/destroyer_64.png">
         </property>
         <property
               name="appName"
               value="NetASSET NG">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/org.mwc.asset.core/icons/WorkBenchLogo.gif">
         </property>
         <property
               name="aboutText"
               value="Welcome to NetASSET NG, from the Maritime Warfare Centre">
         </property>
      </product>
   </extension>

</plugin>
