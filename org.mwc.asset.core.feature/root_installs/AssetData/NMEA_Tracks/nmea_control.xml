<ScenarioController OutputDirectory="NMEA_Tracks/Output"
	xmlns="http://www.mwc.org/asset">
	<ScenarioGenerator>

		<MultiParticipantGenerator>
			<ParticipantVariance name="GreenFV1" number="20"
				RandomCourse="true">
				<ParticipantLocation inRandomLocations="false">
					<WorldArea>
						<TopLeft>
							<shortLocation Lat="11" Long="10"></shortLocation>
						</TopLeft>
						<BottomRight>
							<shortLocation Lat="10" Long="11"></shortLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
		</MultiParticipantGenerator>
	</ScenarioGenerator>
	<ObserverList>
		<TimeObserver Name="elapsed time" Active="true">
			<Duration Value="7" Units="hours" ></Duration>
		</TimeObserver>
		<DebriefReplayObserver Name="DebriefPlot"
			record_detections="true" record_positions="true" Active="true"
			record_decisions="true" file_name="NMEA_Trial">
		</DebriefReplayObserver>
		<NMEAObserver Name="NMEA_output" record_detections="true" record_positions="true" Active="false"
			file_name="NMEA_out">
			<SubjectToTrack>
				<Type Name="BLUE" />
			</SubjectToTrack>
		</NMEAObserver>
	</ObserverList>
</ScenarioController>

